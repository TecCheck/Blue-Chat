<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/foreground_dark</item>
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/magenta_dark</item>
        <item name="colorSecondaryVariant">@color/magenta_dark</item>
        <item name="colorOnSecondary">@color/foreground_dark</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/foreground_dark</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/foreground_dark</item>
        <!-- Error colors -->
        <item name="colorError">@color/red_dark</item>
        <item name="colorOnError">@color/foreground_dark</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Colorful toolbar -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

</resources>